@using Microsoft.AspNet.Identity
@using AMS.Enum
@{
    int roleId = ViewBag.roleId;
}
@{
    ViewBag.Title = "ManageMember";
    if (roleId == SLIM_CONFIG.USER_ROLE_HOUSEHOLDER || roleId == SLIM_CONFIG.USER_ROLE_RESIDENT)
