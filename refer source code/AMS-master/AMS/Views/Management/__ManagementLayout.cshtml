    <link rel="stylesheet" href="~/Content/css/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Content/css/dataTables.bootstrap.min.css">
    <link href="~/Content/css/jquery.datetimepicker.css" rel="stylesheet" />
